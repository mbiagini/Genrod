<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/product_item_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_item_position"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/product_item_code"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/product_item_description"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="5dp"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_item_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_black_1000"
                android:textSize="17sp"/>

            <EditText
                android:id="@+id/product_amount_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:hint="Cantidad"
                android:textColor="@color/md_black_1000"
                android:inputType="numberDecimal"
                android:layout_marginBottom="15dp"
                android:visibility="gone"/>

        </LinearLayout>

        <Spinner
            android:id="@+id/product_spinner"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/md_black_1000"
            android:layout_marginBottom="15dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/product_empty_text_view"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/product_detail_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_item_detail_alternative"
                    android:textColor="@color/md_purple_900"
                    android:layout_marginStart="40dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_item_detail_location"
                    android:textColor="@color/md_purple_900"
                    android:layout_marginStart="40dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp">

                <TextView
                    android:id="@+id/product_item_alternative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/product_item_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginBottom="20dp"
                    android:textSize="17sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>